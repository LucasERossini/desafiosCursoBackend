<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Lista de Productos</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{!-- Recorrer productos para mostrar en la tabla --}}
        {{#each productos}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td>
                <img src="{{this.thumbnail}}" alt="Foto de {{this.title}}" width="100">
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{/if}}